@{
    Layout = null;
}
@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>FPT Book Sign Up</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/AdminLayout/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/AdminLayout/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/AdminLayout/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/AdminLayout/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                               FPT Book Regist
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                              @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="text-danger">@ViewBag.ErrorMessage</div>
                            }
                            @using (Html.BeginForm("SignUp", "Auth", FormMethod.Post, new { @class = "pt-3" }))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(user => user.FullName, new { @class = "form-control form-control-lg", placeholder = "FullName" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(user => user.Username, new { @class = "form-control form-control-lg", placeholder = "Username" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(user => user.Password, new { @class = "form-control form-control-lg", placeholder = "Password" })
                                </div>
                                <div class="mt-3">
                                    <button formmethod="post" type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Sign Up</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? @Html.ActionLink("Sign In", "SignIn", "Auth", null, new { @class = "text-primary" })
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/AdminLayout/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/AdminLayout/assets/js/off-canvas.js"></script>
    <script src="~/AdminLayout/assets/js/hoverable-collapse.js"></script>
    <script src="~/AdminLayout/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>